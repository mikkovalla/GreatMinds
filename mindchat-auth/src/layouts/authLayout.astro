---
// Server-side rendered authentication layout
export interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Authentication",
  description = "Learn, create and collaborate â€” sign in to continue.",
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} - GreatMinds</title>
    <style>
      :root {
        --text-color: #e0e0e0;
        --border-color: #3a3a3a;
        --component-bg: #1e1e1e;
        --main-column-width: 1200px;
      }

      * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }

      body {
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", "Roboto",
          sans-serif;
        background: linear-gradient(135deg, #0a0a0a 0%, #1a1a1a 100%);
        color: var(--text-color);
        line-height: 1.6;
        min-height: 100vh;
      }

      .auth-page {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 3rem 1rem;
      }

      .auth-inner {
        display: grid;
        grid-template-columns: 1fr 420px;
        gap: 3rem;
        align-items: center;
        width: 100%;
        max-width: var(--main-column-width);
        background: linear-gradient(
          180deg,
          rgba(255, 255, 255, 0.02),
          transparent
        );
        padding: 2rem;
        border-radius: 12px;
      }

      .auth-left {
        color: var(--text-color);
        display: flex;
        align-items: center;
      }

      .auth-left-inner {
        max-width: 640px;
        margin: 0 auto;
        text-align: left;
      }

      .site-title {
        font-size: 2.5rem;
        margin-bottom: 1rem;
        font-weight: 700;
      }

      .site-title a {
        color: #ffd700;
        text-decoration: none;
        background: linear-gradient(45deg, #ffd700, #ffed4e);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
      }

      .auth-description {
        margin: 1rem 0 2rem;
        opacity: 0.9;
        font-size: 1.1rem;
      }

      .auth-illustration {
        width: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        margin-top: 2rem;
      }

      .auth-right {
        display: flex;
        align-items: center;
        justify-content: center;
      }

      .auth-card {
        width: 100%;
        max-width: 420px;
        background: var(--component-bg);
        border: 1px solid var(--border-color);
        border-radius: 12px;
        padding: 2rem;
        box-shadow: 0 10px 30px #00000040;
      }

      .modal-title {
        margin: 0 0 1.5rem 0;
        font-size: 1.5rem;
        color: var(--text-color);
        font-weight: 600;
      }

      .form-group {
        margin-bottom: 1rem;
      }

      label {
        display: block;
        margin-bottom: 0.5rem;
        font-weight: 500;
        color: var(--text-color);
      }

      input[type="email"],
      input[type="password"],
      input[type="text"] {
        width: 100%;
        padding: 0.75rem;
        border: 1px solid var(--border-color);
        border-radius: 6px;
        background: #2a2a2a;
        color: var(--text-color);
        font-size: 1rem;
        transition:
          border-color 0.2s,
          box-shadow 0.2s;
      }

      input[type="email"]:focus,
      input[type="password"]:focus,
      input[type="text"]:focus {
        outline: none;
        border-color: #ffd700;
        box-shadow: 0 0 0 2px rgba(255, 215, 0, 0.2);
      }

      .button {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        padding: 0.75rem 1.5rem;
        border: none;
        border-radius: 6px;
        font-size: 1rem;
        font-weight: 500;
        text-decoration: none;
        cursor: pointer;
        transition: all 0.2s;
        width: 100%;
      }

      .button--primary {
        background: linear-gradient(45deg, #ffd700, #ffed4e);
        color: #000;
      }

      .button--primary:hover {
        background: linear-gradient(45deg, #e6c200, #ffe135);
        transform: translateY(-1px);
      }

      .button--secondary {
        background: transparent;
        border: 1px solid var(--border-color);
        color: var(--text-color);
      }

      .button--secondary:hover {
        background: rgba(255, 255, 255, 0.05);
        border-color: #ffd700;
      }

      .button--large {
        padding: 1rem 1.5rem;
        font-size: 1rem;
      }

      .auth-form {
        display: flex;
        flex-direction: column;
        gap: 0;
      }

      .auth-buttons {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
        margin: 1.5rem 0;
      }

      .auth-footer {
        font-size: 0.9rem;
        opacity: 0.9;
        margin-top: 1rem;
        text-align: center;
      }

      .auth-footer a {
        color: #ffd700;
        text-decoration: none;
      }

      .auth-footer a:hover {
        text-decoration: underline;
      }

      @media (max-width: 1023px) {
        .auth-inner {
          grid-template-columns: 1fr 360px;
          gap: 2rem;
          padding: 1.5rem;
        }
      }

      @media (max-width: 767px) {
        .auth-inner {
          grid-template-columns: 1fr;
          padding: 1rem;
        }

        .auth-left {
          order: 2;
          text-align: center;
        }

        .auth-right {
          order: 1;
          margin-bottom: 1.5rem;
        }

        .auth-left-inner {
          max-width: 100%;
        }

        .site-title {
          font-size: 2rem;
        }
      }
    </style>
  </head>
  <body>
    <main class="auth-page">
      <div class="auth-inner">
        <section class="auth-left" aria-hidden="true">
          <div class="auth-left-inner">
            <h1 class="site-title"><a href="/">GreatMinds</a></h1>

            <p class="auth-description">
              {description}
            </p>

            <div class="auth-illustration">
              <slot name="illustration">
                <!-- Default illustration -->
                <svg
                  width="280"
                  height="240"
                  viewBox="0 0 280 240"
                  fill="none"
                  xmlns="http://www.w3.org/2000/svg"
                  aria-hidden="true"
                >
                  <rect
                    x="10"
                    y="10"
                    width="260"
                    height="220"
                    rx="20"
                    fill="#2a2a2a"
                    stroke="#3a3a3a"></rect>
                  <circle cx="80" cy="90" r="10" fill="#ffd700"></circle>
                  <rect
                    x="110"
                    y="70"
                    width="100"
                    height="14"
                    rx="6"
                    fill="#3a3a3a"></rect>
                  <rect
                    x="110"
                    y="96"
                    width="70"
                    height="10"
                    rx="5"
                    fill="#4a4a4a"></rect>
                </svg>
              </slot>
            </div>
          </div>
        </section>

        <aside class="auth-right">
          <section class="auth-card" aria-label="Authentication form">
            <slot />
          </section>
        </aside>
      </div>
    </main>
  </body>
</html>
