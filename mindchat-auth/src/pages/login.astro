---
import AuthLayout from "../layouts/authLayout.astro";
---

<AuthLayout
  title="Sign In"
  description="Welcome back â€” sign in to continue to your workspace."
>
  <form method="post" action="/api/auth/login" class="auth-form">
    <h2 class="modal-title">Sign in to your account</h2>

    <div class="form-group">
      <label for="email">Email</label>
      <input
        id="email"
        name="email"
        type="email"
        required
        placeholder="Enter your email"
      />
    </div>

    <div class="form-group">
      <label for="password">Password</label>
      <input
        id="password"
        name="password"
        type="password"
        required
        placeholder="Enter your password"
      />
    </div>

    <div class="auth-buttons">
      <button class="button button--primary button--large" type="submit">
        Sign in
      </button>

      <button
        type="button"
        class="button button--secondary button--large"
        aria-label="Continue with Google"
      >
        <span style="display:inline-flex;align-items:center;gap:0.5rem;">
          <img
            src="/favicon.svg"
            alt="Google"
            style="width:18px;height:18px;"
          />
          Sign in with Google
        </span>
      </button>

      <button
        type="button"
        class="button button--secondary button--large"
        aria-label="Continue with Facebook"
      >
        <span style="display:inline-flex;align-items:center;gap:0.5rem;">
          <img
            src="/flags/us.svg"
            alt="Facebook"
            style="width:18px;height:18px;"
          />
          Sign in with Facebook
        </span>
      </button>
    </div>

    <div class="auth-footer">
      Don't have an account? <a href="/register">Create one</a>
    </div>
  </form>

  <fragment slot="illustration">
    <!-- Custom illustration for login page -->
    <svg
      width="280"
      height="240"
      viewBox="0 0 280 240"
      fill="none"
      xmlns="http://www.w3.org/2000/svg"
      aria-hidden="true"
    >
      <rect
        x="10"
        y="10"
        width="260"
        height="220"
        rx="20"
        fill="#2a2a2a"
        stroke="#3a3a3a"></rect>
      <circle cx="80" cy="90" r="10" fill="#ffd700"></circle>
      <rect x="110" y="70" width="100" height="14" rx="6" fill="#3a3a3a"></rect>
      <rect x="110" y="96" width="70" height="10" rx="5" fill="#4a4a4a"></rect>
      <path d="M50 160L230 160" stroke="#ffd700" stroke-width="2"></path>
      <circle cx="50" cy="160" r="3" fill="#ffd700"></circle>
      <circle cx="230" cy="160" r="3" fill="#ffd700"></circle>
    </svg>
  </fragment>
</AuthLayout>
